<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">

  <h1 class="text-center text-3xl font-bold">Login</h1>

  <form action="" method="POST" class="mt-4">

			<label for="email">
			<!-- font awesome icon -->
			<i class="fas fa-user"></i>
		</label>
		<input class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" type="email" name="email" placeholder="email" id="email" required>
		<br>
		<br>
		<label for="password">
			<i class="fas fa-lock"></i>
		</label>
		<input class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" type="password" name="password" placeholder="Password" id="password" required>
		<br><br>
		<button type="submit" class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3
      hover:bg-green-600 focus:bg-green-700">Enviar</button>
	  {{#if error}}

        <p class="text-red-500 font-bold text-lg my-3">*{{error}}</p>

        {{/if}}
	</form>
</div>